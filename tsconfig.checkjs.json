{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,

    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    "jsx": "react-jsx",

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,

    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },

    "skipLibCheck": true,
    "types": ["vite/client"],

    "strict": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
